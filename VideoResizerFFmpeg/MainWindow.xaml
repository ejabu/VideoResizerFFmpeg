<Window x:Class="VideoResizerFFmpeg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoResizerFFmpeg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#ffF1F2F4" >
        <TabControl Margin="296,0,0,0" Grid.RowSpan="2">
            <TabItem Header="Input File(s)">
                <Grid Background="#FFffffff" Drop="Grid_Drop" AllowDrop="True">
                    
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="btn" HorizontalAlignment="Left" Margin="93,376,0,0" VerticalAlignment="Top" Height="33" Width="101" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Click="btn_Click">
            <Button.Content>
                <Border CornerRadius="5" Height="25" Width="95" BorderBrush="#ff83A9CB" BorderThickness="1,1,1,1" >
                    <TextBlock Text="Process" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="#ff83A9CB" />
                </Border>
            </Button.Content>
        </Button>

    </Grid>
</Window>
